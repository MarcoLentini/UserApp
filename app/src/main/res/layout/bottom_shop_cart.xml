<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/bottom_shop_cart"
android:layout_width="match_parent"
android:layout_height="60dp"
android:background="@android:color/darker_gray"
android:orientation="vertical"
app:behavior_hideable="true"
app:layout_behavior="android.support.design.widget.BottomSheetBehavior">



        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp8"
                android:background="@drawable/bg_shopcar"
                />
        <TextView
            android:id="@+id/tv_bottom_shop_cart_total_money"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tv_car"
            android:gravity="center"
            android:text="@string/str_total_pay"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/tv_car" />

        <TextView
            android:id="@+id/tv_pay_for_order"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="end|center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/title_basket"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

</RelativeLayout>