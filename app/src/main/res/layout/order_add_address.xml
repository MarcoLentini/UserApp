<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ShoppingCart.AddingAddressActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <!--<Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:id="@+id/past_addr"
            app:layout_constraintTop_toTopOf="parent"
            />-->

        <TextView
            android:id="@+id/past_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorDivider"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:text="@string/past_address_tv_title"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
             android:drawableEnd="@drawable/arrow_down"
            android:drawableRight="@drawable/arrow_down"
            app:layout_constraintTop_toTopOf="parent"
            />
        <LinearLayout
            android:id="@+id/address_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/past_addr"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_city"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_text_input_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:gravity="start|top"
                    android:hint="@string/title_delivery_city"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:nextFocusRight="@+id/edit_text_input_route" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_route"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_text_input_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:gravity="start|top"
                    android:hint="@string/title_delivery_route"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:nextFocusRight="@+id/edit_text_input_number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_text_input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:gravity="start|top"
                    android:hint="@string/title_delivery_number"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:nextFocusDown="@+id/etAddressBtnSave" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_delivery_notes"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/address_area">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_input_delivery_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="start|top"
                android:hint="@string/title_delivery_notes"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:nextFocusDown="@+id/etAddressBtnSave" />
        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:id="@+id/Button_Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp24"
            android:layout_marginBottom="@dimen/dp24"
            app:layout_constraintTop_toBottomOf="@id/text_input_delivery_notes">
            <Button
                android:id="@+id/etAddressBtnCancel"
                android:theme="@style/PrimaryFlatButton"
                android:layout_marginRight="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel_button"
                android:layout_marginEnd="4dp"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/etAddressBtnSave"
                style="@style/Widget.AppCompat.Button.Colored"
                android:theme="@style/PrimaryFlatButton"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginLeft="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/button_save"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarAddOrder"
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>