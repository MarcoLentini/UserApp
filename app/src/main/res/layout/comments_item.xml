<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp8"
    android:padding="@dimen/dp10">

    <TextView
        android:id="@+id/tvDishNameCommentsItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_toStartOf="@+id/ivThumbUp"
        android:layout_toLeftOf="@+id/ivThumbUp"
        android:text="@string/app_name"
        android:textColor="@color/colorSecondaryText" />


    <ImageView
        android:id="@+id/ivThumbUp"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_toStartOf="@+id/ivThumbDown"
        android:layout_toLeftOf="@+id/ivThumbDown"
        android:background="@drawable/ic_thumb_up"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/ContentDescription" />


    <ImageView
        android:id="@+id/ivThumbDown"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:background="@drawable/ic_thumb_down"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/ContentDescription" />
</RelativeLayout>