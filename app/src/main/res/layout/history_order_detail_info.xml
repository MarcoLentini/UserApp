<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cvHistoryOrderDetailInfoStatusPart"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:background="#FFFFFF"
                android:padding="@dimen/dp8"
                >
                <TextView
                    android:id="@+id/tvStatusHistoryOrder"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp4"
                    android:text="@string/str_nnt_order_status"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWelcomeHistoryOrder"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvStatusHistoryOrder"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp4"
                    android:text="@string/history_order_welcome_next_time"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    />

                <Button
                    android:id="@+id/btnCommentForThisOrder"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:theme="@style/PrimaryFlatButton"
                    android:layout_below="@+id/tvWelcomeHistoryOrder"
                    android:textColor="@color/colorSecondaryText"
                     android:padding="@dimen/dp4"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_leave_comments_for_order"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cvHistoryOrderDetailInfoProductPart"
            android:layout_below="@+id/cvHistoryOrderDetailInfoStatusPart"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:background="#FFFFFF"
                android:padding="@dimen/dp8"
                >

                <TextView
                    android:id="@+id/tvRestaurantNameHistoryOrder"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp4"
                    android:text="@string/str_nnt_burgerking"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tvRestaurantNameHistoryOrder"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:id="@+id/llHistoryOrderDetailInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:orientation="vertical">

                </LinearLayout>


                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_below="@+id/llHistoryOrderDetailInfo"
                    android:background="@color/colorDivider" />

                <TextView
                    android:id="@+id/tv_totle_money"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="4dp"
                    android:gravity="end"
                    android:padding="@dimen/dp4"
                    android:text="@string/title_total_cost"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_history_order_total_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_margin="@dimen/dp4"
                    android:layout_toEndOf="@+id/tv_totle_money"
                    android:layout_toRightOf="@+id/tv_totle_money"
                    android:gravity="end"
                    android:padding="@dimen/dp4"
                    android:text="@string/str_nnt_5"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvHistoryOrderDetailInfoDeliveryPart"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cvHistoryOrderDetailInfoProductPart"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:background="#FFFFFF"
                android:padding="@dimen/dp8"
                >

                <TextView
                    android:id="@+id/tvDeliveryInfoHistoryOrder"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp4"
                    android:text="@string/history_order_delivery_detail_information"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tvDeliveryInfoHistoryOrder"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:id="@+id/llDeliveryTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/dp4"
                        android:text="@string/history_order_delivery_time"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tvHistoryOrderDeliveryTime"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDeliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llDeliveryTime"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/dp4"
                        android:text="@string/history_order_delivery_address"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tvHistoryOrderDeliveryAddress"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvHistoryOrderDetailInfoOrderPart"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cvHistoryOrderDetailInfoDeliveryPart"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:background="#FFFFFF"
                android:padding="@dimen/dp8"
                >

                <TextView
                    android:id="@+id/tvOrderInfoHistoryOrder"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp4"
                    android:text="@string/history_order_detail_informantion"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tvOrderInfoHistoryOrder"
                    android:layout_marginTop="@dimen/dp4"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:id="@+id/llOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider4"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/dp4"
                        android:text="@string/history_order_id"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tvHistoryOrderID"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOrderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llOrderId"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/dp4"
                        android:text="@string/histoyr_order_delivery_time"
                        android:textAlignment="viewStart"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tvHistoryOrderCreateTime"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="@dimen/dp4"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>