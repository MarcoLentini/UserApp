<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurant_item_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/linearLayoutOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp16">

        <ImageView
            android:id="@+id/textViewMenuItemLogo"
            android:layout_width="@dimen/dp96"
            android:layout_height="@dimen/dp96"
            android:src="@drawable/img_rest_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/ContentDescription" />

        <LinearLayout
            android:id="@+id/linearLayoutOfferData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewMenuItemLogo"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_toEndOf="@+id/textViewMenuItemLogo"
            android:layout_toRightOf="@+id/textViewMenuItemLogo"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/textViewMenuItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/textViewMenuItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <TextView
                android:id="@+id/textViewMenuItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            android:layout_below="@+id/linearLayoutOfferData"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_toEndOf="@+id/textViewMenuItemLogo"
            android:layout_toRightOf="@+id/textViewMenuItemLogo">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/ContentDescription" />

            <TextView
                android:id="@+id/tv_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/iv_add"
                android:background="@color/white"
                android:textSize="16sp"
                android:visibility="invisible"
                android:layout_toStartOf="@+id/iv_add" />

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_acount"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:visibility="invisible"
                android:layout_toStartOf="@id/tv_acount"
                android:contentDescription="@string/ContentDescription"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>